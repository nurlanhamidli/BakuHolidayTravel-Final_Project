@using bht_demo.Services
@inject LayoutService Service
@{
    Setting setting = Service.GetSetting();
    List<ServiceAndAbout> about = Service.GetAbouts().ToList();
    BlogCategory blog = Service.GetBlog();
    List<Blogs> news = Service.GetNews().ToList();
    List<Blogs> ach = Service.GetAch().ToList();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Link Bootstrap's CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous" />
    <!-- Link Owl Carousel's CSS -->
    <link rel="stylesheet" href="~/assets/css/owl.carousel.min.css" />
    <link rel="stylesheet"
          type="text/css"
          href="~/assets/css/owl.theme.default.min.css" />
    <!-- Link Swiper's CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
    <!-- Css here -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/root.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/css/shared.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css" />

    <link rel="icon" type="image" href="~/assets/web-icon.png" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <!-- Header start -->
    <header>
        <div class="container">
            <nav class="row">
                <div class="logo-img col-1">
                    <a asp-controller="home" asp-action="index">
                        <img src="~/assets/images/@setting.HeaderLogo" alt="bht" />
                    </a>
                </div>
                <div class="menu col-lg-7">
                    <ul>
                        <li><a asp-controller="tour" asp-action="index">turlar</a></li>
                        <li><a asp-controller="aze" asp-action="index">azərbaycan</a></li>
                        <li><a asp-controller="service" asp-action="index">xidmətlər</a></li>
                        <li><a asp-controller="about" asp-action="index">haqqımızda</a></li>
                        <li><a asp-controller="info" asp-action="index">önəmli info</a></li>
                        <li><a asp-controller="blog" asp-action="index" asp-route-id="1">bloq</a></li>
                        <li><a asp-controller="contact" asp-action="index">əlaqə</a></li>
                    </ul>
                    <div id="search-list" class="search-box">
                        <input id="search-input" type="text" placeholder="Axtarış sözü daxil edin" />
                    </div>
                </div>
                <div class="menu-icon col-1">
                    <img src="~/assets/icon/Hamburger_icon_white.png" alt="" />
                </div>
                <div class="dropdown-menu z-index">
                    <div class="container">
                        <div class="row">
                            <div class="m-search-box col-12" style="z-index: 999;">
                                <a class="menu-search-button" href="javascript:">
                                    <img src="~/assets/icon/search_white.png" alt="Search" />
                                </a>
                                <input 
                                       type="text"
                                       name="mobile-search"
                                       placeholder="Axtarış sözü daxil edin" />
                            </div>
                            <div class="close-menu-icon">
                                <img src="~/assets/icon/menu-x-icon.png" alt="" />
                            </div>
                            <div class="mobile-menu row row-cols-2">
                                <ul class="menu-list">
                                    <li><a asp-controller="tour" asp-action="index">turlar</a></li>
                                    <li><a asp-controller="aze" asp-action="index">azərbaycan</a></li>
                                    <li><a asp-controller="service" asp-action="index">xidmətlər</a></li>
                                    <li><a asp-controller="about" asp-action="index">haqqımızda</a></li>
                                    <li><a asp-controller="info" asp-action="index">önəmli info</a></li>
                                    <li><a asp-controller="blog" asp-action="index" asp-route-id="1">bloq</a></li>
                                    <li><a asp-controller="contact" asp-action="index">əlaqə</a></li>
                                </ul>
                                <ul class="menu-list-second">
                                    <li>
                                        <img src="~/assets/icon/phone-call.png" />
                                        <a href="tel:@setting.Tel1" target="_blank">+@setting.Tel1</a>
                                    </li>
                                    <li>
                                        <img src="~/assets/icon/phone.png" />
                                        <a href="tel:@setting.Tel1" target="_blank">+@setting.Tel2</a>
                                    </li>
                                    <li>
                                        <img src="~/assets/icon/whatsapp.png" />
                                        <a href="https://api.whatsapp.com/send?phone=@setting.TelWp"
                                           target="_blank">+@setting.TelWp</a>
                                    </li>
                                    <li>
                                        <img src="~/assets/icon/skype.png" />
                                        <a href="skype:@setting.SkypeUrl?chat" target="_blank">@setting.SkypeUrl</a>
                                    </li>
                                    <li>
                                        <img src="~/assets/icon/messenger.png" />
                                        <a href="https://m.me/@setting.MessengerUrl" target="_blank">@setting.MessengerUrl</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="lang col-lg-1">
                    <div class="lang-select">AZ</div>
                    <img src="~/assets/icon/arrow-down.png" alt="" />
                </div>
                <div class="additional col-lg-3">
                    <ul>
                        <li class="search">
                            <a href="#">
                                <img src="~/assets/icon/search_white.png" alt="..." />
                            </a>
                        </li>
                        <li class="phone">
                            <a class="phone-hvr" disabled>
                                <img src="~/assets/icon/phone_white.png" alt="..." />
                            </a>
                            <ul class="phone-dropdown">
                                <li>
                                    <a href="tel:@setting.Tel1">
                                        <img src="~/assets/icon/phone-call.png"
                                             class="phone-call-icon"
                                             alt="" />+@setting.Tel1
                                    </a>
                                </li>
                                <li>
                                    <a href="tel:@setting.Tel2">
                                        <img src="~/assets/icon/phone.png"
                                             alt=""
                                             class="phone-icon" />+@setting.Tel2
                                    </a>
                                </li>
                                <li>
                                    <a href="https://api.whatsapp.com/send?phone=@setting.TelWp"
                                       target="_blank">
                                        <img src="~/assets/icon/whatsapp.png"
                                             alt=""
                                             class="wapp-icon" />
                                        +@setting.TelWp
                                    </a>
                                </li>
                                <li>
                                    <a href="skype:@setting.SkypeUrl ?call">
                                        <img src="~/assets/icon/skype.png"
                                             alt=""
                                             class="skype-icon" />@setting.SkypeUrl
                                    </a>
                                </li>
                                <li>
                                    <a href="http://m.me/@setting.MessengerUrl" target="_blank">
                                        <img src="~/assets/icon/messenger.png"
                                             alt=""
                                             class="messenger-icon" />
                                        @setting.MessengerUrl
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="fb-link">
                            <a href="@setting.FacebookUrl">
                                <img src="~/assets/icon/facebook.png" alt="..." />
                            </a>
                        </li>
                        <li class="instagram-link">
                            <a href="@setting.InstagramUrl">
                                <img src="~/assets/icon/instagram.png" alt="..." />
                            </a>
                        </li>
                        <li class="linkedin-link">
                            <a href="@setting.LinkedinUrl">
                                <img src="~/assets/icon/linkedin.png" alt="..." />
                            </a>
                        </li>
                        <li class="twitter-link">
                            <a href="@setting.TwitterUrl">
                                <img src="~/assets/icon/soc_tw.png" alt="..." />
                            </a>
                        </li>
                        <li class="youtube-link">
                            <a href="@setting.YoutubeUrl">
                                <img src="~/assets/icon/soc_yt.png" alt="..." />
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <!-- Header end -->

    @RenderBody()

    <!-- Footer start -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-5">
                    <div class="row row-cols-1 row-cols-sm-2">
                        <div class="col">
                            <div class="contacts">
                                <div class="logo">
                                    <img src="~/assets/images/@setting.FooterLogo"
                                         alt="baku holiday travel" />
                                </div>
                                <div class="address">
                                    <div class="icon">
                                        <img src="~/assets/icon/location.png" alt="" />
                                    </div>
                                    <div class="text">
                                        @setting.Adress
                                    </div>
                                </div>
                                <div class="phone">
                                    <div class="icon">
                                        <img src="~/assets/icon/phone_orange.png" alt="" />
                                    </div>
                                    <div class="text">
                                        <a href="tel:@setting.Tel1">+@setting.Tel1</a>
                                    </div>
                                </div>
                                <div class="email">
                                    <div class="icon">
                                        <img src="~/assets/icon/mail.png" alt="" />
                                    </div>
                                    <div class="text">
                                        <a href="mailto:@setting.Email">@setting.Email</a>
                                    </div>
                                </div>
                                <div class="social">
                                    <ul>
                                        <li>
                                            <a href="@setting.FacebookUrl">
                                                <img src="~/assets/icon/facebook.png" alt="" />
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@setting.InstagramUrl">
                                                <img src="~/assets/icon/instagram.png" alt="" />
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@setting.LinkedinUrl">
                                                <img src="~/assets/icon/linkedin.png" alt="" />
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@setting.TwitterUrl">
                                                <img src="~/assets/icon/soc_tw.png" alt="" />
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@setting.YoutubeUrl">
                                                <img src="~/assets/icon/soc_yt.png" alt="" />
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="pages">
                                <h2>Haqqimizda</h2>
                                <ul>
                                    @foreach (var item in about)
                                    {
                                      <li><a asp-controller="service" asp-action="detail" asp-route-id="@item.Id">@item.Name</a></li>
                                    }
                                    <li><a asp-controller="about" asp-action="team">KOMANDAMIZ</a></li>
                                    <li><a asp-controller="blog" asp-action="index" asp-route-id="@blog.Id">NAİLİYYƏTLƏRİMİZ</a></li>
                                    <li><a asp-controller="gallery" asp-action="index">QALEREYA</a></li>
                                    <li><a asp-controller="vacancy" asp-action="index">VAKANSİYALAR</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-7 d-flex flex-column">
                    <div class="subscribe">
                        <div class="heading">YENİLİKLƏRİMİZƏ ABUNƏ OL</div>
                        <div class="text">
                            Email daxil edin, ən yeni və sərfəli turlar haqda məlumat alın
                        </div>
                        <div class="form">
                            <form name="subscribe" method="post" target="_blank">
                                <label for="mail" class="icon">
                                    <img src="~/assets/icon/mail_white.png" alt="" />
                                </label>
                                <input id="mail"
                                       class="email"
                                       type="email"
                                       placeholder="Email address" />
                                <button class="button" name="subscribe" type="submit">
                                    Abunə
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="row row-cols-2">
                        <div class="col">
                            <div class="news">
                                <div class="heading">TURİZM XƏBƏRLƏRİ</div>
                                <div class="news-cards">
                                    @foreach (var item in news)
                                    {
                                        <div class="card mb-3">
                                            <div class="row g-3">
                                                <div class="col-md-3">
                                                    <img src="~/uploads/blog/@item.ImgUrl"
                                                     class="img-fluid rounded-start"
                                                     alt="..." />
                                                </div>
                                                <div class="col-md-9">
                                                    <div class="card-body">
                                                        <h5 class="card-title">
                                                            @item.Title
                                                        </h5>
                                                        <p class="date">@item.Date</p>
                                                        <div class="more"><a asp-controller="blog" asp-action="detail" asp-route-id="@item.Id">Daha ətraflı</a></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="blog">
                                <div class="heading">NAİLİYYƏTLƏRİMİZ</div>
                                <div class="blog-cards">
                                    @foreach (var item in ach)
                                    {
                                        <div class="card mb-3">
                                            <div class="row g-3">
                                                <div class="col-md-3">
                                                    <img src="~/uploads/blog/@item.ImgUrl"
                                                     class="img-fluid rounded-start"
                                                     alt="..." />
                                                </div>
                                                <div class="col-md-9">
                                                    <div class="card-body">
                                                        <h5 class="card-title">
                                                            @item.Title
                                                        </h5>
                                                        <p class="date">@item.Date</p>
                                                        <div class="more"><a asp-controller="blog" asp-action="detail" asp-route-id="@item.Id">Daha ətraflı</a></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-md-5">
                    <div class="payment-copyright">
                        <div class="payment">
                            <div class="mastercard">
                                <img src="~/assets/icon/mastercard.png" alt="" />
                            </div>
                            <div class="visa">
                                <img src="~/assets/icon/visa.png" alt="" />
                            </div>
                        </div>
                        <div class="copyright">
                            &copy;2022 Bütün hüquqlar qorunur. Baku Holiday Travel.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer end -->
    <!-- Axios Js -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <!-- Link jQuery's JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    <!-- Link Owl Carousel's JS -->
    <script src="~/assets/js/owl.carousel.min.js"></script>
    <script src="~/assets/js/owlCaousel.js"></script>
    <!-- Link Swiper's JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <!-- JavaScript here -->
    <script src="~/assets/js/main.js"></script>
</body>
</html>

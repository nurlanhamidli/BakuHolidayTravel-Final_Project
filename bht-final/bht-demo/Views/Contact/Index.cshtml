            </div>
        </div>
    </section>
    <!-- Pages end -->
    <!-- Contact start -->
    <section class="contact">
        <div class="container">
            <div class="row row-cols-1">
                <h3 class="title">BİZƏ YAZIN</h3>
            </div>
            <div class="contacts">
                <form method="post" enctype="multipart/form-data" name="sendmessage">
                    <div class="row row-cols-md-3">
                        <div class="col">
                            <label asp-for="Name">Adı</label>
                            <input asp-for="Name"
                                   placeholder="Adınızı daxil edin" />
                        </div>
                        <div class="col">
                            <label asp-for="Surname">Soyadı</label>
                            <input asp-for="Surname"
                                   placeholder="Soyadınızı daxil edin" />
                        </div>
                        <div class="col">
                            <label asp-for="Email">Email</label>
                            <input placeholder="Email ünvanınızı daxil edin"
                                   asp-for="Email" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label asp-for="PhoneNumber">Mobil nömrəniz</label>
                            <input asp-for="PhoneNumber"
                                   placeholder="Mobil nömrənizi daxil edin" />
                        </div>
                        <div class="col-md-8">
                            <label asp-for="Message">Mesajınız</label>
                            <textarea asp-for="Message"
                                      placeholder="Mesajınızı daxil edin"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="actions">
                                <button class="form-submit" type="submit">
                                    məktubu göndər
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- Contact end -->
</main>
<!-- Main end -->


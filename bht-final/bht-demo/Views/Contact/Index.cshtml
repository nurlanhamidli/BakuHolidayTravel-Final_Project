    <!-- Contact us end -->
    <!-- Pages start -->
    <section class="pages">
        <div class="container">
            <div class="row row-cols-md-3 row-cols-lg-4 row-cols-2">
                <div class="col">
                    <div class="page h-75">
                        <a asp-controller="aze" asp-action="index">
                            <div class="img">
                                <img src="~/assets/icon/az-map-blue.png" alt="" />
                            </div>
                            <div class="title">Azərbaycan turları</div>
                        </a>
                    </div>
                </div>
                <div class="col">
                    <div class="page h-75">
                        <a asp-controller="service" asp-action="detail" asp-route-id="6">
                            <div class="img">
                                <img src="~/assets/icon/korporativ-elaqe-blue.png" alt="" />
                            </div>
                            <div class="title">Korporativ əlaqələr</div>
                        </a>
                    </div>
                </div>
                <div class="col">
                    <div class="page h-75">
                        <a asp-controller="service" asp-action="detail" asp-route-id="3">
                            <div class="img">
                                <img src="~/assets/icon/vip-blue.png" alt="" />
                            </div>
                            <div class="title">VİP müştərİlər</div>
                        </a>
                    </div>
                </div>
                <div class="col">
                    <div class="page h-75">
                        <a href="./azerbaijan.html">
                            <div class="img">
                                <img src="~/assets/icon/subagent-blue.png" alt="" />


@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

@model Slider

<div class="container">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Yeni Slider</h2>
                    <form method="post" enctype="multipart/form-data" class="forms-sample">
                        <div class="form-group">
                            <label asp-for="Title">Başlıq</label>
                            <input asp-for="Title" class="form-control" placeholder="Başlıq">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description">Təsvir</label>
                            <input asp-for="Description" class="form-control" placeholder="Təsvir">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Link"></label>
                            <input asp-for="Link" class="form-control" placeholder="Link">
                        </div>
                        <div class="form-group row">
                            <label asp-for="Type" class="col-sm-3 col-form-label">Slider Type</label>
                            <div class="col-sm-4">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input" asp-for="Type" id="membershipRadios1" value="0" checked>
                                        Home Slider
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-5">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input" asp-for="Type" id="membershipRadios2" value="1">
                                        Azerbaijan Slider
                                    </label>
                                </div>
                            </div>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="mb-3">
                                <label asp-for="ImageFile" class="form-label">Şəkil yüklə</label>
                                <input asp-for="ImageFile" class="form-control file-upload-info btn-primary" accept="image/*">
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Redaktə et</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


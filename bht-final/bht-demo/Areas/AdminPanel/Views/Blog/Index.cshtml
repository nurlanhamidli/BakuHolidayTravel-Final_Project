
@{
    ViewData["Title"] = "Bloqlar";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
@model BlogViewModel

<div class="container">
    <h1>@Model.BlogCategory.Name</h1>
    <a asp-action="create" class="btn btn-warning">Create</a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Count</th>
                <th scope="col">Şəkil</th>
                <th scope="col">Başlıq</th>
                <th scope="col">Tarix</th>
                <th scope="col">Bloq Kateqoriya</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Blogs)
            {
                count++;
                <tr data-id="@Model.BlogCategory.Id">
                    <td>@count</td>
                    <td class="p-0"><img style="width:100px;height:70px; border-radius:5px;" src="~/uploads/blog/@item.ImgUrl" /></td>
                    <td>@item.Title</td>
                    <td>@item.Date</td>
                    <td>@Model.BlogCategory.Name</td>
                    <td><a asp-controller="blog" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Redaktə et</a> </td>
                    <td><a asp-controller="blog" asp-action="Delete" asp-route-id="@item.Id" data-id="@item.Id" data-name="blog" class="btn btn-danger delete-btn">Sil</a></td>
                </tr>
            }

        </tbody>
    </table>
</div>




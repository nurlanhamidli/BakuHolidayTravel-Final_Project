
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
@model List<ContactUs>

<div class="container">
    <h1>Mesajlar</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Count</th>
                <th scope="col">Ad</th>
                <th scope="col">Soyad</th>
                <th scope="col">Email</th>
                <th scope="col">Mobil Nömrə</th>
                <th scope="col">Mesaj</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td><a asp-controller="ContactUs" asp-action="Detail" asp-route-id="@item.Id" data-id="@item.Id" data-name="ContactUs" class="btn btn-primary delete-btn">Ətraflı</a></td>

                    <td><a asp-controller="ContactUs" asp-action="Delete" asp-route-id="@item.Id" data-id="@item.Id" data-name="ContactUs" class="btn btn-danger delete-btn">Sil</a></td>
                    
                </tr>
            }

        </tbody>
    </table>
</div>


